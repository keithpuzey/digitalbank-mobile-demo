<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:layout_marginTop="10dp"
    tools:context=".Fragments.ProfileFragment">

    <!-- Welcome Text -->
    <TextView
        android:id="@+id/welcomeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Welcome"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp" />

    <!-- User Name -->
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="17sp"
        android:layout_below="@id/welcomeText" />

    <!-- FrameLayout to overlay credit card image and text -->
    <FrameLayout
        android:id="@+id/creditCardContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/name"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp">

        <!-- Credit Card Image -->
        <ImageView
            android:id="@+id/creditCardImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/baseline_credit_card_24"
        android:scaleType="centerCrop" />

        <!-- Credit Card Text Overlay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Account Name -->
            <TextView
                android:id="@+id/accountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account Name"
                android:textColor="#FFF"
                android:textSize="16sp" />

            <!-- Balance -->
            <TextView
                android:id="@+id/balance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Balance: $1000.00"
                android:textColor="#FFF"
                android:textSize="16sp"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </FrameLayout>

    <!-- Select Account Text -->
    <TextView
        android:id="@+id/selectAccountText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Select Account"
        android:textSize="16sp"
        android:layout_below="@id/creditCardContainer"
        android:layout_marginTop="16dp" />

    <!-- Spinner -->
    <Spinner
        android:id="@+id/accountSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/selectAccountText"
        android:layout_marginTop="8dp"/>

    <!-- Transaction List -->
    <FrameLayout
        android:id="@+id/profile_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_below="@id/accountSpinner">

        <!-- TableLayout for Transactions -->
        <TableLayout
            android:id="@+id/tableLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"></TableLayout>
    </FrameLayout>

    <!-- Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="?android:attr/windowBackground"
        app:menu="@menu/bottom_navigation_menu" />

</RelativeLayout>
